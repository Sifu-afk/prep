# Root .gitignore for project with frontend and backend

# Node modules
node_modules/
frontend/node_modules/
backend/node_modules/

# Logs
*.log
frontend/*.log
backend/*.log
npm-debug.log*
yarn-debug.log*
yarn-error.log*

# Build outputs
dist/
build/
frontend/dist/
frontend/build/
backend/dist/
backend/build/

# Environment variables
.env
frontend/.env
backend/.env

# OS files
.DS_Store
Thumbs.db

# IDE/editor files
.vscode/
.idea/
*.suo
*.ntvs*
*.njsproj
*.sln

# Optional coverage folder
coverage/
frontend/coverage/
backend/coverage/

# Misc
uploads/
frontend/uploads/
backend/uploads/

# Optional: lock files if not needed
# package-lock.json
# yarn.lock
